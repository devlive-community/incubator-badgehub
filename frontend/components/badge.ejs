<div class="border rounded-lg shadow-sm">
    <div id="badgePreview" class="space-y-4">
        <div class="flex flex-col justify-center items-center p-2 rounded-lg">
            <h3 class="text-sm font-medium text-gray-900">预览效果</h3>
            <div id="badge" class="px-4 py-1.5 text-sm font-medium">
                <img src='<%= `${badgeUrl}` %>'/>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <div class="border-b border-t">
        <nav class="flex gap-1 px-4" role="tablist">
            <button class="px-4 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 relative before:absolute before:bottom-0 before:left-0 before:h-0.5 before:w-full data-[active=true]:before:bg-blue-500 data-[active=true]:text-blue-600 hover:before:bg-gray-200 transition-colors"
                    role="tab"
                    data-target="url-tab"
                    data-active="true">
                <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                    </svg>
                    URL
                </div>
            </button>
            <button class="px-4 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 relative before:absolute before:bottom-0 before:left-0 before:h-0.5 before:w-full data-[active=true]:before:bg-blue-500 data-[active=true]:text-blue-600 hover:before:bg-gray-200 transition-colors"
                    role="tab"
                    data-target="markdown-tab">
                <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
                    </svg>
                    Markdown
                </div>
            </button>
            <button class="px-4 py-3 text-sm font-medium text-gray-500 hover:text-gray-700 relative before:absolute before:bottom-0 before:left-0 before:h-0.5 before:w-full data-[active=true]:before:bg-blue-500 data-[active=true]:text-blue-600 hover:before:bg-gray-200 transition-colors"
                    role="tab"
                    data-target="html-tab">
                <div class="flex items-center gap-2">
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    HTML
                </div>
            </button>
        </nav>
    </div>

    <!-- Tab Panels -->
    <div class="p-4">
        <!-- URL Panel -->
        <div id="url-tab" class="group relative" role="tabpanel">
            <div class="flex items-center relative">
                <input type="text" readonly value="<%= `${badgeUrl}` %>"
                       class="w-full px-3 py-2 bg-white border border-gray-200 rounded-md text-sm font-mono cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500"
                       onclick="this.select(); navigator.clipboard.writeText(this.value)"/>
                <button onclick="this.previousElementSibling.click()"
                        class="absolute right-2 top-1/2 -translate-y-1/2 p-1.5 text-gray-400 hover:text-gray-600 rounded-md hover:bg-gray-100 transition-colors">
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Markdown Panel -->
        <div id="markdown-tab" class="hidden group relative" role="tabpanel">
            <div class="flex items-center relative">
                <input type="text" readonly value="<%= markdownUrl %>"
                       class="w-full px-3 py-2 bg-white border border-gray-200 rounded-md text-sm font-mono cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500"
                       onclick="this.select(); navigator.clipboard.writeText(this.value)"/>
                <button onclick="this.previousElementSibling.click()"
                        class="absolute right-2 top-1/2 -translate-y-1/2 p-1.5 text-gray-400 hover:text-gray-600 rounded-md hover:bg-gray-100 transition-colors">
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
                    </svg>
                </button>
            </div>
        </div>

        <!-- HTML Panel -->
        <div id="html-tab" class="hidden group relative" role="tabpanel">
            <div class="flex items-center relative">
                <input type="text" readonly
                       value="<%= imageUrl %>"
                       class="w-full px-3 py-2 bg-white border border-gray-200 rounded-md text-sm font-mono cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500"
                       onclick="this.select(); navigator.clipboard.writeText(this.value)"/>
                <button onclick="this.previousElementSibling.click()"
                        class="absolute right-2 top-1/2 -translate-y-1/2 p-1.5 text-gray-400 hover:text-gray-600 rounded-md hover:bg-gray-100 transition-colors">
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Toast 提示 -->
    <div id="toast" class="fixed bottom-4 right-4 px-4 py-2 bg-gray-800 text-white rounded-md shadow-lg transform translate-y-full opacity-0 transition-all duration-300"></div>
</div>